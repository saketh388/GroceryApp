<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_vi"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:elevation="10dp"
        app:cardCornerRadius="15dp">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_shopping_cart_24" />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:id="@+id/lay2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/card_vi"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total : "
            android:textColor="#2D2E2E"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Total_bill_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 100"
            android:textColor="#032AFB"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lay2"
        android:layout_marginLeft="36dp"
        android:layout_toEndOf="@+id/card_vi"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/items_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="items : "
            android:textColor="#111212"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/Total_no_of_products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textColor="#8F5601"
            android:textSize="14sp" />

    </LinearLayout>


    <Button
        android:id="@+id/checkOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:backgroundTint="#75DC79"
        android:text="Check out"
        android:textAllCaps="false"
        app:cornerRadius="12dp" />


</RelativeLayout>